@using Microsoft.Extensions.Options
@using core.GoogleCaptchaV2.Utility
@model LoginModel
@inject IOptions<GoogleCaptchaV2> googleCaptchaV2
<div class="card mt-4">
    <div class="card-header">
        <h3 class="card-title">Login</h3>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label>
            <div>
                <div class="input-group">
                    <span class="input-group-text">
                        <span class="bi-person"></span>
                    </span>
                    <input asp-for="Username" class="form-control" dir="ltr" AutoCompleteType="Disabled" />
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <div>
                <div class="input-group">
                    <span class="input-group-text">
                        <span class="bi-key"></span>
                    </span>
                    <input asp-for="Password" class="form-control" dir="ltr" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">
                Security code
            </label>
            <div>
                <div class="g-recaptcha" data-sitekey="@googleCaptchaV2.Value.SiteKey"></div>
            </div>
        </div>
    </div>
    <footer class="card-footer">
        <input type="submit" class="btn btn-secondary" value="Login" />
    </footer>
</div>
